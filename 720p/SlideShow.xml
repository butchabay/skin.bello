<?xml version="1.0" encoding="UTF-8"?>
<window  id="2007">
	<controls>
	 <control type="group" id="13">
		<animation type="Conditional" condition="Slideshow.IsPaused + Slideshow.IsActive">
			<effect type="zoom" time="300" delay="4000" center="640,360" start="100" end="0" tween="cubic" easing="in"/>
			<effect type="fade" time="300" delay="4000" start="100" easing="in" end="0"/>
		</animation>
		<animation type="Conditional" condition="!Slideshow.IsPaused + Slideshow.IsActive">
			<effect type="zoom" time="300" center="640,360" start="100" end="180" tween="cubic" easing="in"/>
			<effect type="fade" time="300" center="640,360" start="100" easing="out" end="0"/>
		</animation>			
		<control type="image" id="13">
			<posx>475</posx>
			<posy>185</posy>
			<width>330</width>
			<height>330</height>
			<texture>osd/osd_pause.png</texture>
		  <colordiffuse>99999999</colordiffuse>
		  <fadetime>300</fadetime>
		</control>
	 </control>
		<!-- media infos -->
	  <control type="group">
			<posx>45</posx>
			<posy>520</posy>
			<visible>Player.ShowInfo + Player.HasAudio</visible>
	    <animation type="WindowOpen">
	        <effect type="slide" start="-150,0" end="0,0" time="750" delay="0" tween="sine" easing="out" />
	        <effect type="fade" start="0" end="100" time="550" delay="0" tween="sine" easing="out" />
	    </animation>
	    <animation type="WindowClose">
	        <effect type="slide" start="0,0" end="-200,0" time="900" delay="200" tween="sine" easing="out" />
	        <effect type="fade" start="100" end="0" time="550" delay="200" tween="sine" easing="out" />
	    </animation>
	    <animation type="Visible">
	        <effect type="slide" start="-150,0" end="0,0" time="750" delay="500" tween="sine" easing="out" />
	        <effect type="fade" start="0" end="100" time="550" delay="500" tween="sine" easing="out" />
	    </animation>
	    <animation type="Hidden">
	        <effect type="slide" start="0,0" end="-200,0" time="900" delay="200" tween="sine" easing="out" />
	        <effect type="fade" start="100" end="0" time="550" delay="200" tween="sine" easing="out" />
	    </animation>
			<control type="group">
				 <control type="label">
					 <description>NP label</description>
					 <posx>125</posx>
					 <posy>160</posy>
					 <width>300</width>
					 <height>30</height>
					 <label>$LOCALIZE[31316]...</label>
					 <align>right</align>
					 <aligny>center</aligny>
					 <font>FontSize_22</font>
					 <textcolor>purple</textcolor>
					 <shadowcolor>99000000</shadowcolor>
					 <animation effect="rotate" start="0" end="90" center="auto" time="0">WindowOpen</animation>
					 <animation effect="rotate" start="0" end="90" center="auto" time="0">WindowClose</animation>
				 </control>
				 <control type="image">
					 <posx>-130</posx>
					 <posy>-130</posy>
					 <width>450</width>
					 <height>450</height>
					 <aspectratio align="center" aligny="center">stretch</aspectratio>
				   <texture background="true">views/list/shine.png</texture>
				 </control>
	       <control type="image">
	         <posx>3</posx>
	         <posy>-50</posy>
	         <width>155</width>
	         <height>155</height>
		       <texture fallback="osd/cd.png" diffuse="osd/cd_diffuse.png">$INFO[Player.FolderPath]cdart.png</texture>
	         <aspectratio>keep</aspectratio>
					 <include>CDImageAnim</include>
					 <visible>!Player.IsInternetStream</visible>
	      </control>				
				<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>160</width>
						<height>160</height>
						<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
				    <texture background="true" fallback="thumbs/fallback_square.png" diffuse="thumbs/music_diffuse.png">$INFO[Player.Art(thumb)]</texture>
						<fadetime>800</fadetime>
				</control>
				<control type="image">
						<posx>-7</posx>
						<posy>-7</posy>
						<width>174</width>
						<height>174</height>
						<aspectratio aligny="center">stretch</aspectratio>
						<texture>thumbs/music_overlay.png</texture>
						<fadetime>800</fadetime>
				</control>
				<control type="image">
						<posx>0</posx>
						<posy>162</posy>
						<width>160</width>
						<height>160</height>
						<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
				    <texture background="true" fallback="thumbs/fallback_square.png" flipy="true" diffuse="thumbs/music_reflection_diffuse.png">$INFO[Player.Art(thumb)]</texture>
						<fadetime>800</fadetime>
						<colordiffuse>a0ffffff</colordiffuse>
				</control>
				<control type="image">
						<description>paused indicator</description>
						<posx>-1</posx>
						<posy>-1</posy>
						<width>162</width>
						<height>162</height>
						<texture background="true" diffuse="thumbs/music_diffuse.png">osd/paused-overlay.png</texture>
						<aspectratio align="center" aligny="center" scalediffuse="false">stretch</aspectratio>
						<visible>Player.Paused</visible>
						<include>VisibleFadeEffect</include>
						<animation type="conditional" condition="Player.Paused" reversible="true">
							<effect type="fade" start="0" end="50" time="300" />
						</animation>
				</control>
				<control type="image">
						<description>ff indicator</description>
						<posx>-1</posx>
						<posy>-1</posy>
						<width>162</width>
						<height>162</height>
						<texture background="true" diffuse="thumbs/music_diffuse.png">osd/ff-overlay.png</texture>
						<aspectratio align="center" aligny="center" scalediffuse="false">stretch</aspectratio>
						<visible>Player.Forwarding</visible>
						<include>VisibleFadeEffect</include>
						<animation type="conditional" condition="Player.Forwarding" reversible="true">
							<effect type="fade" start="0" end="50" time="300" />
						</animation>
				</control>
				<control type="image">
						<description>rw indicator</description>
						<posx>-1</posx>
						<posy>-1</posy>
						<width>162</width>
						<height>162</height>
						<texture background="true" diffuse="thumbs/music_diffuse.png">osd/rw-overlay.png</texture>
						<aspectratio align="center" aligny="center" scalediffuse="false">stretch</aspectratio>
						<visible>Player.Rewinding</visible>
						<include>VisibleFadeEffect</include>
						<animation type="conditional" condition="Player.Rewinding" reversible="true">
							<effect type="fade" start="0" end="50" time="300" />
						</animation>
				</control>
			</control>
			
			<!-- Info -->
			<control type="group">
					<posx>173</posx>
				<control type="label">
					<description>Title label</description>
					<posx>0</posx>
					<posy>64</posy>
					<height>30</height>
					<width>1000</width>
					<label>$INFO[MusicPlayer.Title]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>FontSize_36</font>
					<textcolor>white</textcolor>
					<shadowcolor>99000000</shadowcolor>
				</control>
				<control type="label">
					<description>Album Label</description>
					<posx>0</posx>
					<posy>94</posy>
					<height>30</height>
					<width>1000</width>
					<label>$INFO[MusicPlayer.Artist,, - ]$INFO[MusicPlayer.Album]$INFO[musicplayer.discnumber, - $LOCALIZE[427]:]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>FontSize_18</font>
					<textcolor>white</textcolor>
					<shadowcolor>99000000</shadowcolor>
				</control>
				<control type="label">
					<description>Time Label</description>
					<posx>0</posx>
					<posy>124</posy>
					<height>30</height>
					<width>300</width>
					<label>$INFO[Player.Time(mm:ss)]$INFO[Player.Duration,[COLOR=purple] / [/COLOR]]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>FontSize_18</font>
					<textcolor>purple</textcolor>
					<shadowcolor>99000000</shadowcolor>
				</control>
			</control>
	  </control>
	</controls>
</window>